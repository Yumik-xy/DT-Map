/* pages/user/apply/apply.wxss */
.apply{
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.pf-type{
   color: #666666;
   margin-bottom: 10rpx;
 }
.q-image-wrap{
  width: 150rpx;
  height: 150rpx;
  border: 3px solid #f0f0f0;
  float: left;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}
.q-image-remover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background: #3cb778;
  position: absolute;
  top:-50rpx;
  right:-50rpx;
 
}
.q-image-remover image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left:10rpx;
  bottom:10rpx;
  color:#fff;
}
 
.uploadImgBtn{
  display: flex;
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  border: 6rpx solid #f0f0f0;
  float: left;
  align-items: center;
  justify-content: center;
}
.uploadImgBtn image{
  width: 80rpx;
  height: 80rpx;
}
.submit{
  width:500rpx;
  line-height:85rpx;
  text-align:center;
  margin:50rpx auto;
  background-color: #3cb778;
  border-radius:10rpx;
  color: white;
  align-items: center;
  justify-content: center;
}
.q-image{
  width: 150rpx;
  height: 150rpx;
}

.place{
  justify-content: center;
  align-items: center;
  padding: 15rpx;
  height: 200rpx;
  width: 100%;
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-bottom: 50rpx;
  margin-right: 30rpx;
  background-color: #eeeeee;
  border-radius:20rpx
}
.fadeBox{
  width: 100%;
  margin-bottom: 20rpx;
}
#one{
  background: #f00;
  height: 400rpx;
}

#two{

  background: #ff0;
  height: 800rpx;
}

#three{
  background: #f0f;
  height: 300rpx;
}

#four{
  background: #00f;  
  height: 600rpx;
}

button{
  background: #3cb778;
  margin-bottom: 20rpx;
  color: white;
}
.show{
  display: flex;
  flex-wrap: wrap;
}
.hidden{
  display: none;
}
.steps{
  display:flex;
  flex-flow: row warp;
  margin-top: 20rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  justify-content :space-around;
  color:#666666
}
 
.step{
   display:flex;
 /* border: 1rpx solid black; */
 
   flex-flow: column nowrap
}
 
.stepText{
  align-items: center;
  justify-content:space-around;
  font-family: 'HiraginoSansGB-W3';
  font-size: 23rpx;
  margin-top: 5rpx;
}
 
.step .img{
  width: 90rpx;
  height: 90rpx;
}
.con{
  width: 100%;
  margin-top: 20rpx;
  line-height:70rpx;
  margin-bottom: 50rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
}

.con view{
  /* margin-left:30rpx; */
  padding-left: 30rpx;
  border-bottom:1px solid #e6e6e6;
}

.con view text{
  font-size: 32rpx;
  color: #666666;
}
.con-nr{
  background-color: white;
  display: flex;
}
.con-nr text{
  flex: 2;
}
.con-nr input{
  float:right;
  font-size:28rpx;
  height: 70rpx;
  flex: 6;
  
}
