/* pages/user/setup/changephonenumber/changephonenumber.wxss */
page{
  background-color: #eeeeee;
}
.con {
  margin: 20rpx 0rpx 50rpx 0rpx;
  line-height: 70rpx;
}

.con-nr {
  background-color: white;
  display: flex;
  padding-left: 30rpx;
  border-bottom: 1px solid #e6e6e6;
}

.con-nr text {
  flex: 2;
  font-size: 32rpx;
  color: #666666;
  line-height: 100rpx;
}

.con-nr input {
  float: right;
  font-size: 28rpx;
  height: 100rpx;
  flex: 6;
}
.code {
  border: 3rpx solid #8f8f8f;
  margin-top: 20rpx;
  padding: 10rpx 35rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 2rpx 0 2rpx #66666666;
  font-size: 23rpx;
  color: #666666;
  line-height: 45rpx;
}

.vercode {
  display: flex;
  height: 60rpx;
  line-height: 100rpx;
  flex: 5;
  margin-right: 20rpx;
}

.con-code {
  background-color: white;
  display: flex;
  padding-left: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}

.con-code text {
  flex: 5.5;
  font-size: 32rpx;
  color: #666666;
  line-height: 100rpx;
}

.con-code input {
  float: right;
  font-size: 28rpx;
  height: 100rpx;
  flex: 10;
}
.submit {
  width: 800rpx;
  line-height: 45rpx;
  text-align: center;
  margin: 50rpx auto;
  background-color: #3cb778;
  border-radius: 30rpx;
  color: white;
  font-weight: 550;
}