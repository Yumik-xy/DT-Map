/* pages/manage/manage.wxss */
.manege_detail {
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
}

.detail {
  width: 90%;
  display: flex;
  justify-content: space-between;
  border: 1px solid #eee;
  padding: 2vh;
  border-radius: 10rpx
}

.ticket-container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.ticket-container .title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.ticket-container .title-sel {
  color: #24272c;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ticket-container .title-sel .line-style {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.ticket-container .title-sel-selected {
  color: #3cb778;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ticket-container .title-sel-selected .line-style {
  background: #3cb778;
  height: 6rpx;
  width: 90rpx;
  position: relative;
  margin-top: 10rpx;
}

.ticket-container .swiper {
  width: 90%;
  flex: 1;
  overflow: scroll;
  margin: 0 auto;
}

.ticket-container .record-item {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
  font-size: 30rpx;
}

.ticket-container .name {
  display: flex;
  justify-content: space-between;
  border: 1px solid #eee;
  padding: 2vh;
  border-radius: 10rpx
}